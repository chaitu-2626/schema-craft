{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "auto",

		"strict": true,
		"noUncheckedIndexedAccess": true,

		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"incremental": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"lib": ["ES2022"],
		"composite": true,
		"forceConsistentCasingInFileNames": true
	},
	"tsc-alias": {
		"resolveFullPaths": true,
		"verbose": false
	}
}
